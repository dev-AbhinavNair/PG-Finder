<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>FindMyPG - Verify OTP</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />


  <style>
    body {
      background-color: #f5f7fb;
    }

    .auth-card {
      max-width: 420px;
      margin: 40px auto;
      padding: 32px 28px;
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
    }

    .brand {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 24px;
    }

    .brand-icon {
      width: 32px;
      height: 32px;
      border-radius: 10px;
      background-color: #2563eb;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #ffffff;
      font-weight: 700;
      margin-right: 8px;
    }

    .brand-text {
      font-size: 1.1rem;
      font-weight: 700;
      color: #2563eb;
    }

    .auth-title {
      text-align: center;
      font-weight: 700;
      font-size: 1.4rem;
      margin-bottom: 8px;
    }

    .auth-subtitle {
      text-align: center;
      font-size: 0.9rem;
      color: #6b7280;
      margin-bottom: 24px;
    }

    .form-label {
      font-size: 0.9rem;
      font-weight: 500;
      color: #374151;
    }

    .form-control {
      font-size: 0.95rem;
      padding: 10px 12px;
      border-radius: 8px;
    }

    .btn-primary {
      background-color: #2563eb;
      border-color: #2563eb;
      border-radius: 999px;
      padding: 10px 16px;
      font-weight: 600;
    }

    .btn-primary:hover {
      background-color: #1d4ed8;
      border-color: #1d4ed8;
    }

    .small-text {
      font-size: 0.85rem;
    }

    .otp-input {
      letter-spacing: 0.35em;
      text-align: center;
      font-weight: 700;
    }

    .page-loader {
      position: fixed;
      inset: 0;
      background: rgba(245, 247, 251, 0.75);
      backdrop-filter: blur(3px);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 9999;
    }

    .page-loader.show {
      display: flex;
    }

    .loader-card {
      background: #fff;
      border-radius: 14px;
      padding: 18px 20px;
      box-shadow: 0 10px 30px rgba(15, 23, 42, 0.12);
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .loader-text {
      font-weight: 600;
      color: #111827;
      font-size: 0.95rem;
    }
  </style>
</head>

<body>

  <div id="verifyLoader" class="page-loader" aria-hidden="true">
    <div class="loader-card">
      <div class="spinner-border text-primary" role="status" aria-label="Loading"></div>
      <div class="loader-text">Verifying OTP...</div>
    </div>
  </div>


  <div class="container">
    <div class="auth-card">
      <div class="brand">
        <div class="brand-icon"><span>üè†</span></div>
        <span class="brand-text">FindMyPG</span>
      </div>

      <h1 class="auth-title">Verify OTP</h1>
      <div class="auth-subtitle">
        Enter the 6-digit code sent to your WhatsApp.
      </div>

      <% if (typeof error !=="undefined" && error) { %>
        <div class="alert alert-danger py-2 small-text">
          <%= error %>
        </div>
        <% } %>

          <form action="/verify-otp" method="POST" class="mb-3">
            <input type="hidden" name="purpose" value="<%= typeof purpose !== 'undefined' ? purpose : '' %>" />
            <input type="hidden" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" />
            <input type="hidden" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" />
            <input type="hidden" name="role" value="<%= typeof role !== 'undefined' ? role : '' %>" />

            <div class="mb-3">
              <label class="form-label" for="phone">Phone</label>
              <input type="tel" class="form-control" id="phone" name="phone" placeholder="9876543210"
                value="<%= typeof phone !== 'undefined' ? phone : '' %>" required autocomplete="tel" readonly
                style="background-color: #f9fafb; color: #6b7280; cursor: not-allowed;" tabindex="-1" />
            </div>

            <div class="mb-3">
              <label class="form-label" for="otp">OTP</label>
              <input type="text" class="form-control otp-input" id="otp" name="otp" placeholder="______"
                inputmode="numeric" pattern="[0-9]{6}" maxlength="6" required autocomplete="one-time-code" />
              <div class="form-text small-text">
                OTP is valid for a few minutes.
              </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
              Verify &amp; Continue
            </button>
          </form>

          <div class="text-center small-text">
            Didn‚Äôt get the code?
            <a href="/login">Resend OTP</a>
          </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const phoneInput = document.getElementById('phone');
      if (phoneInput) {
        phoneInput.style.backgroundColor = '#f9fafb';
        phoneInput.style.color = '#6b7280';
        phoneInput.style.cursor = 'not-allowed';
        phoneInput.tabIndex = -1;

        ['copy', 'cut', 'paste', 'keydown', 'contextmenu'].forEach(event => {
          phoneInput.addEventListener(event, e => e.preventDefault());
        });
      }

      const form = document.querySelector('form[action="/verify-otp"]');
      const loader = document.getElementById('verifyLoader');
      const submitBtn = document.querySelector('button[type="submit"]');

      if (!form || !loader || !submitBtn) return;

      window.addEventListener('pageshow', function () {
        loader.classList.remove('show');
        loader.setAttribute('aria-hidden', 'true');
        if (phoneInput) {
          phoneInput.readOnly = true;
          phoneInput.tabIndex = -1;
        }
      });

      form.addEventListener('submit', function (e) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Verifying...';
        loader.classList.add('show');
        loader.setAttribute('aria-hidden', 'false');

      });
    });
  </script>

</body>

</html>