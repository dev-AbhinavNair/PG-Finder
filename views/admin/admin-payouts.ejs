<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="icon" type="image/png" href="/media/favIcon.png">
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>FindMyPG Admin - Payouts</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

  <style>
    body { background: #f5f7fb; }
    .topbar { background: #ffffff; border-bottom: 1px solid #e5e7eb; height: 56px; }
    .brand-link { display: flex; align-items: center; gap: 10px; font-weight: 700; color: #2563eb; text-decoration: none; }
    .brand-icon { width: 30px; height: 30px; border-radius: 10px; background: #2563eb; display: flex; align-items: center; justify-content: center; color: #fff; font-weight: 700; }
    .sidebar { background: #f9fafb; border-right: 1px solid #e5e7eb; min-height: calc(100vh - 56px); padding: 14px 0; }
    .side-link { display: flex; align-items: center; gap: 10px; padding: 9px 18px; color: #4b5563; text-decoration: none; font-size: 0.95rem; }
    .side-link:hover { background: #e5edff; }
    .side-link.active { background: #e5edff; color: #111827; border-left: 3px solid #2563eb; padding-left: 15px; font-weight: 600; }
    .content-wrap { padding: 18px 22px 32px; }
    .page-title { font-weight: 700; font-size: 1.35rem; color: #111827; }
    .stat-card { border-radius: 14px; border: 1px solid #e5e7eb; background: #ffffff; padding: 12px 16px; }
    .stat-label { font-size: 0.8rem; color: #6b7280; }
    .stat-value { font-weight: 700; font-size: 1.3rem; }
    .table-card { background: #ffffff; border-radius: 14px; border: 1px solid #e5e7eb; overflow: hidden; }
    .badge-soft { border-radius: 999px; padding: 4px 10px; font-size: 0.75rem; }
    .badge-status-success { background: #dcfce7; color: #166534; }
    .badge-status-failed { background: #fee2e2; color: #b91c1c; }
    .badge-status-pending { background: #fef3c7; color: #92400e; }
    .badge-status-processing { background: #dbeafe; color: #1e40af; }
    .user-avatar-img { object-fit: cover; }
    .user-avatar-placeholder { font-size: 0.75rem; font-weight: 600; }
    .user-cell { padding: 12px 16px; }
    .footer { background: #ffffff; border-top: 1px solid #e5e7eb; padding: 16px 24px; font-size: 0.85rem; color: #9ca3af; }
    
    /* Responsive improvements */
    @media (max-width: 768px) {
      .content-wrap { padding: 12px 16px 24px; }
      .page-title { font-size: 1.2rem; }
      .stat-card { padding: 10px 12px; }
      .stat-value { font-size: 1.1rem; }
    }
  </style>
</head>

<body>
  <nav class="navbar topbar px-3">
    <div class="container-fluid">
      <div class="d-flex align-items-center gap-2">
        <a class="brand-link" href="/admin/listings">
          <div class="brand-icon">A</div>
          <span>FindMyPG Admin</span>
        </a>
      </div>
      <div class="ms-auto d-flex align-items-center gap-3">
        <span class="small text-secondary d-none d-md-inline"><%= admin?.name || "Admin" %></span>
        <div class="rounded-circle bg-light border" style="width:32px;height:32px;overflow:hidden">
          <% if (admin?.avatar_url) { %>
            <img src="<%= admin.avatar_url %>" style="width:100%;height:100%;object-fit:cover">
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row g-0">
      <aside class="col-12 col-md-3 col-lg-2 sidebar">
        <a href="/admin/listings" class="side-link"><i class="bi bi-list-ul"></i> Listings</a>
        <a href="/admin/reports" class="side-link"><i class="bi bi-exclamation-triangle"></i> Reports</a>
        <a href="/admin/payments" class="side-link"><i class="bi bi-credit-card"></i> Payments</a>
        <a href="/admin/payouts" class="side-link active"><i class="bi bi-wallet2"></i> Payouts</a>
        <a href="/admin/settings" class="side-link"><i class="bi bi-gear"></i> Settings</a>

        <form action="/logout" method="POST" class="mt-3 px-3">
          <button class="btn btn-outline-secondary btn-sm w-100" type="submit">Logout</button>
        </form>
      </aside>

      <main class="col-12 col-md-9 col-lg-10 content-wrap">
        <h4 class="page-title mb-3">Owner Payouts</h4>

<div class="row g-3 mb-4">
          <!-- Stats Cards Row -->
          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Total Payouts</div>
              <div class="stat-value">₹<%= stats.totalPayoutAmount %></div>
            </div>
          </div>
          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Pending</div>
              <div class="stat-value"><%= stats.pendingPayouts %></div>
            </div>
          </div>
          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Total Count</div>
              <div class="stat-value"><%= stats.totalPayouts %></div>
            </div>
          </div>
          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Actions</div>
              <button class="btn btn-success w-100 mt-2" onclick="processAllPendingPayouts()" id="processAllBtn">
                <i class="bi bi-send-check"></i> Process All Pending
              </button>
            </div>
          </div>
        </div>

        <!-- Search Bar Row -->
        <div class="row g-3 mb-4">
          <div class="col-12">
            <form method="GET" class="d-flex gap-2 align-items-center">
              <input type="text" name="q" class="form-control" placeholder="Search by payout ID or UTR" value="<%= q || '' %>">
              <select name="status" class="form-select" style="width: auto;">
                <option value="all" <%= currentStatus === 'all' ? 'selected' : '' %>>All Status</option>
                <option value="pending" <%= currentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="processing" <%= currentStatus === 'processing' ? 'selected' : '' %>>Processing</option>
                <option value="completed" <%= currentStatus === 'completed' ? 'selected' : '' %>>Completed</option>
                <option value="failed" <%= currentStatus === 'failed' ? 'selected' : '' %>>Failed</option>
              </select>
              <button type="submit" class="btn btn-primary">Search</button>
            </form>
          </div>
        </div>

        <div class="table-card">
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th><input type="checkbox" id="selectAllPending" onchange="toggleSelectAllPending()"></th>
                  <th>Payout ID</th>
                  <th>Transaction</th>
                  <th>Owner</th>
                  <th>Amount</th>
                  <th>Mode</th>
                  <th>Status</th>
                  <th>UTR</th>
                  <th>Processed By</th>
                  <th>Processed On</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (!payouts.length) { %>
                  <tr>
                    <td colspan="10" class="text-center text-muted py-4">No payouts found.</td>
                  </tr>
                <% } %>

                <% payouts.forEach(p => { %>
                  <tr>
                    <td>
                      <input type="checkbox" class="payout-checkbox" value="<%= p._id %>" 
                        <%= p.status !== 'pending' ? 'disabled' : '' %>
                        title="<%= p.status !== 'pending' ? 'Already processed' : 'Select for bulk processing' %>">
                    </td>
                    <td class="fw-semibold"><%= p.payoutId %></td>
                    <td class="fw-semibold"><%= p.transactionId %></td>
                    <td class="user-cell">
                      <div class="d-flex align-items-center gap-3">
                        <div class="rounded-circle bg-light border flex-shrink-0" style="width:40px;height:40px;overflow:hidden">
                          <% if (p.ownerAvatar) { %>
                            <img src="<%= p.ownerAvatar %>" class="user-avatar-img" style="width:100%;height:100%;object-fit:cover">
                          <% } else { %>
                            <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-primary text-white user-avatar-placeholder">
                              <%= p.ownerName ? p.ownerName.charAt(0).toUpperCase() : 'O' %>
                            </div>
                          <% } %>
                        </div>
                        <div>
                          <div class="fw-semibold"><%= p.ownerName %></div>
                          <div class="small text-muted"><%= p.ownerPhone %></div>
                        </div>
                      </div>
                    </td>
                    <td class="fw-semibold text-success">₹<%= p.amount %></td>
                    <td><%= p.mode %></td>
                    <td>
                      <span class="badge-soft
                        <%= p.status === 'completed' ? 'badge-status-success' : '' %>
                        <%= p.status === 'failed' ? 'badge-status-failed' : '' %>
                        <%= p.status === 'processing' ? 'badge-status-processing' : '' %>
                        <%= p.status === 'pending' ? 'badge-status-pending' : '' %>">
                        <%= p.status.toUpperCase() %>
                      </span>
                    </td>
                    <td class="fw-semibold"><%= p.utr || '-' %></td>
                    <td><%= p.processedBy || '-' %></td>
                    <td><%= p.processedAtFormatted || '-' %></td>
                    <td>
                      <% if (p.status === 'pending') { %>
                        <button class="btn btn-sm btn-primary" onclick="processPayout('<%= p._id %>')">
                          <i class="bi bi-send"></i> Process
                        </button>
                      <% } else if (p.status === 'failed' && p.retryCount < 3) { %>
                        <button class="btn btn-sm btn-warning" onclick="processPayout('<%= p._id %>')">
                          <i class="bi bi-arrow-clockwise"></i> Retry
                        </button>
                      <% } else { %>
                        <span class="text-muted small">
                          <% if (p.status === 'completed') { %>
                            <i class="bi bi-check-circle text-success"></i> Done
                          <% } else if (p.status === 'processing') { %>
                            <i class="bi bi-hourglass-split text-info"></i> Processing
                          <% } else if (p.status === 'failed') { %>
                            <i class="bi bi-x-circle text-danger"></i> Failed
                          <% } %>
                        </span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="d-flex justify-content-between align-items-center px-3 py-2 border-top small text-muted">
            <span>Page <%= page %> of <%= totalPages %></span>
            <nav>
              <ul class="pagination pagination-sm mb-0">
                <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= page - 1 %>">Previous</a>
                </li>
                <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= page + 1 %>">Next</a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </main>
    </div>
  </div>

  <div class="footer text-center">
    © <%= new Date().getFullYear() %> FindMyPG Admin
  </div>

  <script>
    function processPayout(payoutId) {
      if (confirm('Process this payout? This will initiate the money transfer to the owner\'s bank account.')) {
        fetch(`/admin/payouts/${payoutId}/process`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ mode: 'razorpay_payout' })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert(data.message);
            window.location.reload();
          } else {
            alert('Error: ' + data.error);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Failed to process payout. Please try again.');
        });
      }
    }

    function toggleSelectAllPending() {
      const selectAll = document.getElementById('selectAllPending');
      const checkboxes = document.querySelectorAll('.payout-checkbox:not([disabled])');
      
      checkboxes.forEach(checkbox => {
        checkbox.checked = selectAll.checked;
      });
    }

    function getSelectedPayoutIds() {
      const checkboxes = document.querySelectorAll('.payout-checkbox:checked:not([disabled])');
      return Array.from(checkboxes).map(cb => cb.value);
    }

function processAllPendingPayouts() {
      const selectedIds = getSelectedPayoutIds();
      const pendingCheckboxes = document.querySelectorAll('.payout-checkbox:not([disabled])');
      const pendingData = Array.from(pendingCheckboxes).map(cb => ({
        id: cb.value,
        amount: cb.closest('tr').querySelector('.text-success').textContent.replace('₹', '')
      }));
      
      if (selectedIds.length ===0 && pendingCheckboxes.length >0) {
        alert('Please select at least one pending payout to process.');
        return;
      }

      const count = selectedIds.length > 0 ? selectedIds.length : pendingCheckboxes.length;
      const totalAmount = selectedIds.length > 0 
        ? selectedIds.reduce((sum, id) => {
            const payout = pendingData.find(p => p.id === id);
            return sum + (parseFloat(payout?.amount) || 0);
          }, 0)
        : pendingData.reduce((sum, p) => sum + parseFloat(p.amount), 0);

      const message = selectedIds.length > 0 
        ? `Process ${count} selected payouts totaling ₹${totalAmount.toFixed(2)}? This will initiate money transfers to multiple owners.`
        : `Process ALL ${count} pending payouts totaling ₹${totalAmount.toFixed(2)}? This will initiate money transfers to all owners.`;

      if (confirm(message)) {
        const btn = document.getElementById('processAllBtn');
        btn.disabled = true;
        btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Processing...';

        fetch('/admin/payouts/process-bulk', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ 
            payoutIds: selectedIds.length > 0 ? selectedIds : 'all' 
          })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert(data.message);
            window.location.reload();
          } else {
            alert('Error: ' + data.error);
            btn.disabled = false;
            btn.innerHTML = '<i class="bi bi-send-check"></i> Process All Pending';
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Failed to process payouts. Please try again.');
          btn.disabled = false;
          btn.innerHTML = '<i class="bi bi-send-check"></i> Process All Pending';
        });
      }
    }

    // Auto-select all pending on page load for convenience
    document.addEventListener('DOMContentLoaded', function() {
      const selectAllBtn = document.getElementById('selectAllPending');
      if (selectAllBtn) {
        selectAllBtn.checked = true;
        toggleSelectAllPending();
      }
    });
  </script>
</body>
</html>