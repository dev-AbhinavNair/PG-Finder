<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="icon" type="image/png" href="/media/favIcon.png">
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>FindMyPG Admin - Payments</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

  <style>
    body { background: #f5f7fb; }
    .topbar { background: #ffffff; border-bottom: 1px solid #e5e7eb; height: 56px; }
    .brand-link { display: flex; align-items: center; gap: 10px; font-weight: 700; color: #2563eb; text-decoration: none; }
    .brand-icon { width: 30px; height: 30px; border-radius: 10px; background: #2563eb; display: flex; align-items: center; justify-content: center; color: #fff; font-weight: 700; }
    .sidebar { background: #f9fafb; border-right: 1px solid #e5e7eb; min-height: calc(100vh - 56px); padding: 14px 0; }
    .side-link { display: flex; align-items: center; gap: 10px; padding: 9px 18px; color: #4b5563; text-decoration: none; font-size: 0.95rem; }
    .side-link:hover { background: #e5edff; }
    .side-link.active { background: #e5edff; color: #111827; border-left: 3px solid #2563eb; padding-left: 15px; font-weight: 600; }
    .content-wrap { padding: 18px 22px 32px; }
    .page-title { font-weight: 700; font-size: 1.35rem; color: #111827; }
    .stat-card { border-radius: 14px; border: 1px solid #e5e7eb; background: #ffffff; padding: 12px 16px; }
    .stat-label { font-size: 0.8rem; color: #6b7280; }
    .stat-value { font-weight: 700; font-size: 1.3rem; }
    .table-card { background: #ffffff; border-radius: 14px; border: 1px solid #e5e7eb; overflow: hidden; }
    .badge-soft { border-radius: 999px; padding: 4px 10px; font-size: 0.75rem; }
    .badge-status-success { background: #dcfce7; color: #166534; }
    .badge-status-failed { background: #fee2e2; color: #b91c1c; }
    .badge-status-pending { background: #fef3c7; color: #92400e; }
    .user-avatar-img { object-fit: cover; }
    .user-avatar-placeholder { font-size: 0.75rem; font-weight: 600; }
    .user-cell { padding: 12px 16px; }
    .footer { background: #ffffff; border-top: 1px solid #e5e7eb; padding: 16px 24px; font-size: 0.85rem; color: #9ca3af; }
    
    /* Responsive improvements */
    @media (max-width: 768px) {
      .content-wrap { padding: 12px 16px 24px; }
      .page-title { font-size: 1.2rem; }
      .stat-card { padding: 10px 12px; }
      .stat-value { font-size: 1.1rem; }
    }
  </style>
</head>

<body>
  <nav class="navbar topbar px-3">
    <div class="container-fluid">
      <div class="d-flex align-items-center gap-2">
        <a class="brand-link" href="/admin/listings">
          <div class="brand-icon">A</div>
          <span>FindMyPG Admin</span>
        </a>
      </div>
      <div class="ms-auto d-flex align-items-center gap-3">
        <span class="small text-secondary d-none d-md-inline"><%= admin?.name || "Admin" %></span>
        <div class="rounded-circle bg-light border" style="width:32px;height:32px;overflow:hidden">
          <% if (admin?.avatar_url) { %>
            <img src="<%= admin.avatar_url %>" style="width:100%;height:100%;object-fit:cover">
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row g-0">
      <aside class="col-12 col-md-3 col-lg-2 sidebar">
        <a href="/admin/listings" class="side-link"><i class="bi bi-list-ul"></i> Listings</a>
        <a href="/admin/reports" class="side-link"><i class="bi bi-exclamation-triangle"></i> Reports</a>
        <a href="/admin/payments" class="side-link active"><i class="bi bi-credit-card"></i> Payments</a>
        <a href="/admin/payouts" class="side-link"><i class="bi bi-wallet2"></i> Payouts</a>
        <a href="/admin/settings" class="side-link"><i class="bi bi-gear"></i> Settings</a>
        <form action="/logout" method="POST" class="mt-3 px-3">
          <button class="btn btn-outline-secondary btn-sm w-100" type="submit">Logout</button>
        </form>
      </aside>

      <main class="col-12 col-md-9 col-lg-10 content-wrap">
        <h4 class="page-title mb-3">Payments Overview</h4>

        <div class="row g-3 mb-4">

          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Total Revenue</div>
              <div class="stat-value">₹<%= stats.totalRevenue %></div>
            </div>
          </div>
          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Platform Revenue</div>
              <div class="stat-value">₹<%= stats.platformRevenue %></div>
            </div>
          </div>
          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Total Payments</div>
              <div class="stat-value"><%= stats.totalPayments %></div>
            </div>
          </div>
          <div class="col-12 col-md-3">
            <div class="stat-card">
              <div class="stat-label">Actions</div>
              <button class="btn btn-primary w-100 mt-2" onclick="createPayouts()">
                <i class="bi bi-plus-circle"></i> Create Payouts
              </button>
            </div>
          </div>
        </div>


        <div class="row g-3 mb-4">
          <div class="col-12">
            <form method="GET" class="d-flex gap-2 align-items-center">
              <input type="text" name="q" class="form-control" placeholder="Search by transaction ID (e.g., booking_6978c6...)" value="<%= q || '' %>">
              <select name="status" class="form-select" style="width: auto;">
                <option value="all" <%= currentStatus === 'all' ? 'selected' : '' %>>All Status</option>
                <option value="success" <%= currentStatus === 'success' ? 'selected' : '' %>>Success</option>
                <option value="pending" <%= currentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="failed" <%= currentStatus === 'failed' ? 'selected' : '' %>>Failed</option>
              </select>
              <button type="submit" class="btn btn-primary">Search</button>
            </form>
          </div>
        </div>

        <div class="table-card">
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th><input type="checkbox" id="selectAll" onchange="toggleSelectAll()"></th>
                  <th>Transaction</th>
                  <th>User</th>
                  <th>Listing</th>
                  <th>Amount</th>
                  <th>Platform Fee</th>
                  <th>Owner Amount</th>
                  <th>Method</th>
                  <th>Status</th>
                  <th>Payout Status</th>
                  <th>Paid On</th>
                </tr>
              </thead>
              <tbody>
                <% if (!payments.length) { %>
                  <tr>
                    <td colspan="11" class="text-center text-muted py-4">No payments found.</td>
                  </tr>
                <% } %>

                <% payments.forEach(p => { %>
                  <tr>
                    <td>
                      <input type="checkbox" class="payment-checkbox" value="<%= p._id %>" 
                        <%= p.payoutStatus === 'completed' || p.payoutStatus === 'processing' ? 'disabled' : '' %>
                        title="<%= p.payoutStatus === 'completed' || p.payoutStatus === 'processing' ? 'Payout already processed' : 'Select for payout' %>">
                    </td>
                    <td class="fw-semibold"><%= p.transactionId %></td>
                      <td class="user-cell">
                        <div class="d-flex align-items-center gap-3">
                          <div class="rounded-circle bg-light border flex-shrink-0" style="width:40px;height:40px;overflow:hidden">
                            <% if (p.userAvatar) { %>
                              <img src="<%= p.userAvatar %>" class="user-avatar-img" style="width:100%;height:100%;object-fit:cover">
                            <% } else { %>
                              <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-primary text-white user-avatar-placeholder">
                                <%= p.userName ? p.userName.charAt(0).toUpperCase() : 'U' %>
                              </div>
                            <% } %>
                          </div>
                          <div>
                            <div class="fw-semibold"><%= p.userName %></div>
                            <div class="small text-muted"><%= p.userPhone %></div>
                          </div>
                        </div>
                      </td>
                    <td>
                      <div><%= p.listingName %></div>
                      <div class="small text-muted"><%= p.city %></div>
                    </td>
                    <td class="fw-semibold"><%= p.amount %></td>
                    <td class="text-muted"><%= p.platformFee %></td>
                    <td class="fw-semibold text-success"><%= p.ownerAmount %></td>
                    <td><%= p.method %></td>
                    <td>
                      <span class="badge-soft
                        <%= p.status === 'success' ? 'badge-status-success' : '' %>
                        <%= p.status === 'failed' ? 'badge-status-failed' : '' %>
                        <%= p.status === 'pending' ? 'badge-status-pending' : '' %>">
                        <%= p.status.toUpperCase() %>
                      </span>
                    </td>
                    <td>
                      <span class="badge-soft
                        <%= p.payoutStatus === 'completed' ? 'badge-status-success' : '' %>
                        <%= p.payoutStatus === 'failed' ? 'badge-status-failed' : '' %>
                        <%= p.payoutStatus === 'processing' ? 'badge-status-pending' : '' %>
                        <%= p.payoutStatus === 'pending' ? 'badge-status-pending' : '' %>">
                        <%= p.payoutStatus ? p.payoutStatus.toUpperCase() : 'PENDING' %>
                      </span>
                    </td>
                    <td><%= p.paidAtFormatted %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="d-flex justify-content-between align-items-center px-3 py-2 border-top small text-muted">
            <span>Page <%= page %> of <%= totalPages %></span>
            <nav>
              <ul class="pagination pagination-sm mb-0">
                <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= page - 1 %>">Previous</a>
                </li>
                <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= page + 1 %>">Next</a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </main>
    </div>
  </div>

  <div class="footer text-center">
    © <%= new Date().getFullYear() %> FindMyPG Admin
  </div>

  <script>
    function toggleSelectAll() {
      const selectAll = document.getElementById('selectAll');
      const checkboxes = document.querySelectorAll('.payment-checkbox:not([disabled])');
      
      checkboxes.forEach(checkbox => {
        checkbox.checked = selectAll.checked;
      });
    }

    function getSelectedPaymentIds() {
      const checkboxes = document.querySelectorAll('.payment-checkbox:checked:not([disabled])');
      return Array.from(checkboxes).map(cb => cb.value);
    }

    function createPayouts() {
      const selectedIds = getSelectedPaymentIds();
      
      console.log("Selected payment IDs:", selectedIds);
      
      if (selectedIds.length === 0) {
        alert('Please select at least one payment to create payouts for.');
        return;
      }

      if (confirm(`Create payouts for ${selectedIds.length} selected payments? This will calculate the platform commission (10%) and process owner payouts.`)) {
        fetch('/admin/payouts/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ paymentIds: selectedIds })
        })
        .then(response => {
          console.log("Response status:", response.status);
          return response.json();
        })
        .then(data => {
          console.log("Response data:", data);
          if (data.success) {
            alert(data.message);
            window.location.reload();
          } else {
            alert('Error: ' + data.error);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Failed to create payouts. Please try again.');
        });
      }
    }
  </script>
</body>
</html>
