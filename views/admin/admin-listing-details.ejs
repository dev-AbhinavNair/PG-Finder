<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Listing Details - FindMyPG Admin</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

  <style>
    body {
      background: #f5f7fb;
    }

    .topbar {
      background: #ffffff;
      border-bottom: 1px solid #e5e7eb;
      height: 56px;
    }

    .brand-link {
      display: flex;
      align-items: center;
      gap: 10px;
      font-weight: 700;
      color: #2563eb;
      text-decoration: none;
    }

    .brand-icon {
      width: 30px;
      height: 30px;
      border-radius: 10px;
      background: #2563eb;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      font-weight: 700;
    }

    .sidebar {
      background: #f9fafb;
      border-right: 1px solid #e5e7eb;
      min-height: calc(100vh - 56px);
      padding: 14px 0;
    }

    .side-link {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 9px 18px;
      color: #4b5563;
      text-decoration: none;
      font-size: .95rem;
    }

    .side-link:hover {
      background: #e5edff;
    }

    .side-link.active {
      background: #e5edff;
      color: #111827;
      border-left: 3px solid #2563eb;
      padding-left: 15px;
      font-weight: 600;
    }

    .content-wrap {
      padding: 18px 22px 32px;
    }

    .back-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      color: #2563eb;
      text-decoration: none;
      font-size: 0.95rem;
      margin-bottom: 20px;
    }

    .back-btn:hover {
      color: #1d4ed8;
    }

    .listing-header {
      background: #ffffff;
      border: 1px solid #e5e7eb;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 24px;
      display: flex;
      justify-content: space-between;
      align-items: start;
    }

    .listing-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: #111827;
    }

    .listing-meta {
      display: flex;
      gap: 16px;
      margin-top: 8px;
      flex-wrap: wrap;
    }

    .listing-meta-item {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 0.9rem;
      color: #6b7280;
    }

    .badge-soft {
      border-radius: 999px;
      padding: 6px 12px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .badge-status-published {
      background: #dcfce7;
      color: #166534;
    }

    .badge-status-pending_approval {
      background: #fef3c7;
      color: #92400e;
    }

    .badge-status-draft {
      background: #f3f4f6;
      color: #6b7280;
    }

    .badge-status-unpublished {
      background: #fee2e2;
      color: #b91c1c;
    }

    .card-section {
      background: #ffffff;
      border: 1px solid #e5e7eb;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 1.1rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 16px;
      padding-bottom: 12px;
      border-bottom: 1px solid #e5e7eb;
    }

    .info-row {
      display: flex;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #f3f4f6;
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      color: #6b7280;
      font-size: 0.9rem;
      font-weight: 500;
    }

    .info-value {
      color: #111827;
      font-weight: 600;
      text-align: right;
    }

    .info-value.link {
      color: #2563eb;
      text-decoration: none;
    }

    .info-value.link:hover {
      text-decoration: underline;
    }

    .description-box {
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      padding: 12px;
      color: #4b5563;
      line-height: 1.6;
      margin-top: 8px;
    }

    .amenities-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: 8px;
    }

    .amenity-tag {
      background: #f3f4f6;
      border: 1px solid #e5e7eb;
      border-radius: 6px;
      padding: 6px 10px;
      font-size: 0.85rem;
      color: #4b5563;
    }

    .owner-card {
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      border-radius: 12px;
      padding: 16px;
      display: flex;
      gap: 12px;
      align-items: start;
    }

    .owner-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #e5e7eb;
    }

    .owner-info h6 {
      margin: 0 0 4px 0;
      font-weight: 700;
    }

    .owner-info p {
      margin: 4px 0;
      font-size: 0.9rem;
      color: #6b7280;
    }

    .action-buttons {
      display: flex;
      gap: 12px;
      margin-top: 16px;
    }

    .btn-custom {
      padding: 10px 20px;
      border-radius: 8px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-approve {
      background: #10b981;
      color: #fff;
    }

    .btn-approve:hover {
      background: #059669;
    }

    .btn-reject {
      background: #ef4444;
      color: #fff;
    }

    .btn-reject:hover {
      background: #dc2626;
    }

    .footer {
      background: #ffffff;
      border-top: 1px solid #e5e7eb;
      padding: 16px 24px;
      font-size: .85rem;
      color: #9ca3af;
    }

    .map-container {
      border-radius: 8px;
      overflow: hidden;
      margin-top: 12px;
      height: 300px;
    }

    .sidebar-overlay {
      display: none;
    }

    @media (max-width: 991.98px) {
      .sidebar {
        position: fixed;
        top: 56px;
        bottom: 0;
        left: 0;
        width: 260px;
        transform: translateX(-100%);
        z-index: 1040;
        transition: transform 0.3s ease-in-out;
        box-shadow: 4px 0 24px rgba(0, 0, 0, 0.1);
      }

      .sidebar.show {
        transform: translateX(0);
      }

      .sidebar-overlay {
        display: block;
        position: fixed;
        top: 56px;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1030;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s;
      }

      .sidebar-overlay.show {
        opacity: 1;
        visibility: visible;
      }
    }
  </style>
</head>

<body>
  <nav class="navbar topbar px-3">
    <div class="container-fluid">
      <div class="d-flex align-items-center gap-2">
        <button class="btn btn-light d-lg-none me-2" id="sidebarToggle">
          <i class="bi bi-list"></i>
        </button>
        <a class="brand-link" href="">
          <div class="brand-icon">A</div>
          <span>FindMyPG Admin</span>
        </a>
      </div>

      <div class="ms-auto d-flex align-items-center gap-3">
        <span class="small text-secondary d-none d-md-inline">
          <% if (admin && admin.name) { %>
            <%= admin.name %>
              <% } else { %>
                Admin
                <% } %>
        </span>
        <div class="rounded-circle bg-light border" style="width:32px;height:32px;overflow:hidden;">
          <% if (admin && admin.avatar_url) { %>
            <img src="<%= admin.avatar_url %>" style="width:100%;height:100%;object-fit:cover;" alt="avatar">
            <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row g-0">
      <aside class="col-12 col-md-3 col-lg-2 sidebar">
        <a href="/admin/listings" class="side-link active">
          <span><i class="bi bi-list-ul"></i></span> Listings
        </a>
        <a href="/admin/reports" class="side-link">
          <span><i class="bi bi-exclamation-triangle"></i></span> Reports
        </a>
        <a href="/admin/settings" class="side-link">
          <span><i class="bi bi-gear"></i></span> Settings
        </a>

        <form action="/logout" method="POST" class="mt-3 px-3">
          <button class="btn btn-outline-secondary btn-sm w-100" type="submit">Logout</button>
        </form>
      </aside>
      <div class="sidebar-overlay" id="sidebarOverlay"></div>

      <main class="col-12 col-md-9 col-lg-10 content-wrap">
        <a href="/admin/listings?status=<%= encodeURIComponent(back?.status || 'pending') %>&q=<%= encodeURIComponent(back?.q || '') %>&page=<%= encodeURIComponent(back?.page || '1') %>"
          class="back-btn">
          ‚Üê Back to Listings
        </a>

        <div class="listing-header">
          <div>
            <div class="listing-title">
              <%= listing.name %>
            </div>
            <div class="listing-meta">
              <div class="listing-meta-item">
                üìç <%= listing.area %>, <%= listing.city %>
              </div>
              <div class="listing-meta-item">
                üìÖ <%= listing.createdAtFormatted %>
              </div>
            </div>
          </div>
          <div style="text-align: right;">
            <span class="badge-soft badge-status-<%= listing.status %>">
              <%= listing.status.charAt(0).toUpperCase() + listing.status.slice(1).replace(/_/g, ' ' ) %>
            </span>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-8">
            <div class="card-section">
              <div class="section-title">Basic Information</div>

              <div class="info-row">
                <span class="info-label">Short Tagline</span>
                <span class="info-value">
                  <%= listing.shortTagline %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Gender Type</span>
                <span class="info-value text-capitalize">
                  <%= listing.gender %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Food Included</span>
                <span class="info-value">
                  <%= listing.foodIncluded %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Verified</span>
                <span class="info-value">
                  <%= listing.verified %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Featured</span>
                <span class="info-value">
                  <%= listing.featured %>
                </span>
              </div>
            </div>

            <div class="card-section">
              <div class="section-title">Pricing</div>

              <div class="info-row">
                <span class="info-label">Minimum Rent</span>
                <span class="info-value">
                  <%= listing.minPrice %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Maximum Rent</span>
                <span class="info-value">
                  <%= listing.maxPrice %>
                </span>
              </div>
            </div>

            <div class="card-section">
              <div class="section-title">Location Details</div>

              <div class="info-row">
                <span class="info-label">Address</span>
                <span class="info-value">
                  <%= listing.address %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Area</span>
                <span class="info-value">
                  <%= listing.area %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">City</span>
                <span class="info-value">
                  <%= listing.city %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">State</span>
                <span class="info-value">
                  <%= listing.state %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Pincode</span>
                <span class="info-value">
                  <%= listing.pincode %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Coordinates</span>
                <span class="info-value">
                  <%= listing.latitude %>, <%= listing.longitude %>
                </span>
              </div>
            </div>

            <div class="card-section">
              <div class="section-title">Description</div>
              <div class="description-box">
                <%= listing.description %>
              </div>
            </div>

            <% if (listing.longDescription) { %>
              <div class="card-section">
                <div class="section-title">Detailed Description</div>
                <div class="description-box">
                  <%= listing.longDescription %>
                </div>
              </div>
              <% } %>

                <div class="card-section">
                  <div class="section-title">Amenities</div>
                  <div class="amenities-list">
                    <% if (listing.amenities.length> 0) { %>
                      <% listing.amenities.forEach(amenity=> { %>
                        <span class="amenity-tag">
                          <%= amenity %>
                        </span>
                        <% }); %>
                          <% } else { %>
                            <span class="text-muted">No amenities listed</span>
                            <% } %>
                  </div>
                </div>

                <div class="card-section">
                  <div class="section-title">House Rules</div>
                  <div class="description-box">
                    <%= listing.houseRules %>
                  </div>
                </div>

                <% const cover=listing.cover_url ? [listing.cover_url] : []; const
                  gallery=Array.isArray(listing.gallery_urls) ? listing.gallery_urls : [];
                  if cover is also in gallery) const photos=[...cover, ...gallery.filter(u=> u && u !==
                  listing.cover_url)];
                  %>

                  <div class="card-section">
                    <div class="section-title">Photos (<%= photos.length %>)</div>

                    <% if (photos.length> 0) { %>
                      <div class="row g-2">
                        <% photos.forEach((photo, index)=> { %>
                          <div class="col-6 col-sm-4 col-md-3 col-lg-4">
                            <div class="position-relative">
                              <img src="<%= photo %>" alt="PG Photo <%= index + 1 %>" class="w-100 rounded"
                                style="height: 120px; object-fit: cover;" />

                              <% if (index===0 && listing.cover_url) { %>
                                <small
                                  class="position-absolute top-0 start-0 bg-primary bg-opacity-75 text-white px-2 py-1 rounded-end m-1">
                                  Cover
                                </small>
                                <% } %>
                            </div>
                          </div>
                          <% }) %>
                      </div>
                      <% } else { %>
                        <div class="text-center py-4 text-muted">
                          <i class="bi bi-image fs-1 opacity-50 mb-2 d-block"></i>
                          <div>No photos uploaded</div>
                        </div>
                        <% } %>
                  </div>

          </div>

          <div class="col-lg-4">

            <div class="card-section">
              <div class="section-title">Owner Information</div>

              <div class="owner-card">
                <% if (listing.ownerAvatar) { %>
                  <img src="<%= listing.ownerAvatar %>" alt="owner" class="owner-avatar" />
                  <% } else { %>
                    <div class="owner-avatar bg-light d-flex align-items-center justify-content-center border-0">
                      <span style="font-size: 1.5rem;"><i class="bi bi-person-circle"></i></span>
                    </div>
                    <% } %>
                      <div class="owner-info flex-grow-1">
                        <h6>
                          <%= listing.ownerName %>
                        </h6>
                        <p>üìû <a href="tel:<%= listing.ownerPhone %>" class="info-value link">
                            <%= listing.ownerPhone %>
                          </a></p>
                        <p>üìß <a href="mailto:<%= listing.ownerEmail %>" class="info-value link">
                            <%= listing.ownerEmail %>
                          </a></p>
                      </div>
              </div>
            </div>

            <div class="card-section">
              <div class="section-title">Metadata</div>

              <div class="info-row">
                <span class="info-label">Created</span>
                <span class="info-value">
                  <%= listing.createdAtFormatted %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Last Updated</span>
                <span class="info-value">
                  <%= listing.updatedAtFormatted %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Status</span>
                <span class="info-value text-capitalize">
                  <%= listing.status %>
                </span>
              </div>
            </div>

            <% if (listing.status==='pending_approval' ) { %>
              <div class="card-section">
                <div class="section-title">Moderation Actions</div>

                <div class="action-buttons" style="flex-direction: column;">
                  <button class="btn-custom btn-approve" onclick="approveListing()"><i class="bi bi-check-circle"></i>
                    Approve Listing</button>
                  <button class="btn-custom btn-reject" onclick="openRejectModal()"><i class="bi bi-x-circle"></i>
                    Reject Listing</button>
                </div>
              </div>
              <% } %>

                <% if (listing.status==='published' ) { %>
                  <div class="card-section">
                    <div class="section-title">Actions</div>
                    <button class="btn-custom btn-reject w-100" onclick="openRejectModal()">üö´ Unpublish</button>
                  </div>
                  <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>

  <div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Reject Listing</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Reason for Rejection</label>
            <textarea class="form-control" id="rejectReason" rows="5"
              placeholder="Explain why you're rejecting this listing..."></textarea>
          </div>
          <div class="alert alert-info small">
            ‚ÑπÔ∏è The owner will be notified about the rejection with your reason.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" onclick="submitReject()">Reject Listing</button>
        </div>
      </div>
    </div>
  </div>

  <div class="footer text-center">
    ¬© <%= new Date().getFullYear() %> FindMyPG Admin. All rights reserved.
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const listingId = '<%= listing._id %>';

    function openRejectModal() {
      const rejectModal = new bootstrap.Modal(document.getElementById('rejectModal'));
      rejectModal.show();
    }

    async function approveListing() {
      if (!confirm('Are you sure you want to approve this listing?')) {
        return;
      }

      try {
        const res = await fetch(`/admin/listings/${listingId}/approve`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const data = await res.json();

        if (res.ok) {
          alert(data.message);
          location.reload();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (err) {
        alert('Request failed: ' + err.message);
      }
    }

    async function submitReject() {
      const reason = document.getElementById('rejectReason').value;

      if (!reason.trim()) {
        alert('Please provide a reason for rejection');
        return;
      }

      try {
        const res = await fetch(`/admin/listings/${listingId}/reject`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ reason })
        });

        const data = await res.json();

        if (res.ok) {
          alert(data.message);
          location.reload();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (err) {
        alert('Request failed: ' + err.message);
      }
    }

    const toggleBtn = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    const overlay = document.getElementById('sidebarOverlay');

    if (toggleBtn && sidebar && overlay) {
      toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('show');
        overlay.classList.toggle('show');
      });

      overlay.addEventListener('click', () => {
        sidebar.classList.remove('show');
        overlay.classList.remove('show');
      });
    }
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const phoneInput = document.getElementById('phone');
      if (phoneInput) {
        phoneInput.style.backgroundColor = '#f9fafb';
        phoneInput.style.color = '#6b7280';
        phoneInput.style.cursor = 'not-allowed';
        phoneInput.tabIndex = -1;

        ['copy', 'cut', 'paste', 'keydown', 'contextmenu'].forEach(event => {
          phoneInput.addEventListener(event, e => e.preventDefault());
        });
      }

      const form = document.querySelector('form[action="/verify-otp"]');
      const loader = document.getElementById('verifyLoader');
      const submitBtn = document.querySelector('button[type="submit"]');

      if (!form || !loader || !submitBtn) return;

      window.addEventListener('pageshow', function () {
        loader.classList.remove('show');
        loader.setAttribute('aria-hidden', 'true');
        if (phoneInput) {
          phoneInput.readOnly = true;
          phoneInput.tabIndex = -1;
        }
      });

      form.addEventListener('submit', function (e) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Verifying...';
        loader.classList.add('show');
        loader.setAttribute('aria-hidden', 'false');

      });
    });
  </script>

</body>

</html>